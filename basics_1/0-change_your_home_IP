#!/usr/bin/env bash
# This script changes localhost to resolve to 127.0.0.2 and facebook.com to 8.8.8.8

# Backup /etc/hosts
cp /etc/hosts /etc/hosts.bak

# Remove existing localhost or facebook.com entries to avoid duplicates
sudo sed -i '/localhost/d' /etc/hosts
sudo sed -i '/facebook.com/d' /etc/hosts

# Add new host entries
echo "127.0.0.2 localhost" | sudo tee -a /etc/hosts > /dev/null
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts > /dev/null
